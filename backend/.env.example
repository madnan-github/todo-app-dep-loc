# Backend Environment Variables
# Copy this file to .env and fill in the values

# Database Configuration (Neon PostgreSQL)
# Format: postgresql+asyncpg://user:password@host/database?sslmode=require
DATABASE_URL=postgresql+asyncpg://username:password@ep-xxx.region.neon.tech/database?sslmode=require

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=10080  # 7 days in minutes

# Application Settings
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true
ENVIRONMENT=development

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Better Auth (if using Neon with Better Auth)
BETTER_AUTH_SECRET=your-better-auth-secret-key

# Logging
LOG_LEVEL=INFO
