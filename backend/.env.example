# TaskFlow Backend - Production Environment Template
# Copy this file to .env and fill in your values
# WARNING: Never commit .env with real secrets to version control

# =============================================================================
# DATABASE (Neon PostgreSQL - Serverless)
# =============================================================================
# Get your connection string from: https://console.neon.tech
# Use the "Pooled" connection string (includes -pooler suffix)
DATABASE_URL=postgresql://username:password@ep-xxxxx-pooler.us-east-1.aws.neon.tech/dbname?sslmode=require

# =============================================================================
# AUTHENTICATION (Critical - generate strong random values)
# =============================================================================
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-super-secret-jwt-key-min-32-chars
BETTER_AUTH_SECRET=your-better-auth-secret-min-32-chars

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=production
DEBUG=false
API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# CORS (Vercel Production Domains Only)
# =============================================================================
# List your Vercel frontend URLs (comma-separated, no spaces)
# Include localhost for local development, production for Railway deployment
# Example: http://localhost:3000,https://web-taskflow.vercel.app
CORS_ORIGINS=http://localhost:3000,https://web-taskflow.vercel.app

# =============================================================================
# OPTIONAL: Logging
# =============================================================================
# LOG_LEVEL=INFO
